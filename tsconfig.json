{
  "compilerOptions": {
    "target": "ES6",                    
    "module": "commonjs",                
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                  
    "rootDir": "./src",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}
